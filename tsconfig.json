{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/assets/*": [
        "src/assets/*"
      ]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src",
    "vite-env.d.ts"
  ]
}
